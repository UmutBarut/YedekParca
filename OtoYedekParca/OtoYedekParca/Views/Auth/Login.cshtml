				{
					background-image: url('/app/images/backgrounds/bg4.jpg');
				}
			</style>
			<!--end::Page bg image-->
			<!--begin::Authentication - Sign-in -->
			<div class="d-flex flex-column flex-column-fluid flex-lg-row">
				<!--begin::Aside-->
				<div class="d-flex flex-center w-lg-50 pt-15 pt-lg-0 px-10">              
					<!--begin::Aside-->
					<div class="d-flex flex-center flex-lg-start flex-column">              
						<!--begin::Logo-->
						<a asp-controller="Home" asp-action="Index" class="mb-7">
							<img height="300" width="300" src="/app/images/logos/AkuNOS1.png"/>
						</a>    
						<!--end::Logo-->            
						<!--begin::Title-->
						<h2 class="text-white fw-normal m-0 mb-4"> 
							Branding tools designed for your business
						</h2>  
						<!--end::Title-->       
						<!--begin::Text-->
							<div class="text-white fs-base text-center fw-semibold">
								In this kind of post, <a href="#" class="opacity-75-hover text-primary me-1">the blogger</a> 

								introduces a person they’ve interviewed <br/> and provides some background information about 
								
								<a href="#" class="opacity-75-hover text-primary me-1">the interviewee</a> 
								and their <br/> work following this is a transcript of the interview.  
							</div>
						<!--end::Text-->  
					</div>
					<!--begin::Aside-->    
				</div>
				<!--begin::Aside-->
				<!--begin::Body-->
				<div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12 p-lg-20">
					<!--begin::Card-->
					<div class="card card-bordered bg-body d-flex flex-column align-items-stretch flex-center rounded-4 w-md-600px p-20">
						<!--begin::Wrapper-->
						<div class="d-flex flex-center flex-column flex-column-fluid px-lg-10 pb-15 pb-lg-20">
							<!--begin::Form-->
							<form class="form w-100" id="kt_sign_in_form" method="POST">
								<!--begin::Heading-->
								<div class="text-center mb-11">
									<!--begin::Title-->
									<h1 class="text-dark fw-bolder mb-3">Hoşgeldiniz</h1>
									<!--end::Title-->
									<!--begin::Subtitle-->
									<div class="text-gray-500 fw-semibold fs-6">Giriş Yapın</div>
									<!--end::Subtitle--->
								</div>
								<!--begin::Heading-->
								<!--begin::Input group--->
								<div class="fv-row mb-8">
									<!--begin::UserName-->
									<span asp-validation-for="@Model.UserName" class="text-danger"></span>
									<input type="text" asp-for="@Model.UserName" placeholder="Kullanıcı Adı" autocomplete="off" class="form-control bg-transparent"/> 
									<!--end::UserName-->
								</div>
								<!--end::Input group--->
								<div class="fv-row mb-3">    
									<!--begin::Password-->
									<span asp-validation-for="@Model.Password" class="text-danger"></span>
									<input type="password" asp-for="@Model.Password" placeholder="Şifre" autocomplete="off" class="form-control bg-transparent"/>
									<!--end::Password-->
								</div>
								<!--end::Input group--->

